<section id="Section-1">
  <div class="container offset4">
    <div class="row-fluid">
      <div class="span6 color-white">
        <div class="row-fluid">
          <div class="span12">
            <div id="survey_edit_form">
              <div class="container">
                <div class= "row">
                  <div class="span6 page-header color-white" >
                    <h3 style="padding-top:50px;">Edit <%= current_user.email.gsub(/(.+)@.+/, '\1') %>'s Profile</h3>
                  </div>
                </div>
                <div class="row-fluid">
                  <div class="span6 color-white">
                    <div class="row-fluid">
                      <div class="span12">
                        <form id="edit_profile-<%= current_user.id %>" class="edit_delete_user" method="post" action="/profile/:profile_id/edit">
                          <div>
                            <label for="profile_email">Email</label>
                            <input type="text" name="user[email]" value="<%= current_user.email %>" id="profile_email">
                          </div>
                          <div>
                            <label for="password">Password</label>
                            <input type="password" name="user[password]" placeholder="Password" id="password">
                          </div>
                          <div>
                           <label for="password_confirmation">Password Confirmation</label>
                            <input type="password" name="user[password_confirmation]" placeholder="Password Confirmation" id="password_confirmation">
                          <div>
                            <input class="btn" type="submit" name="submit">
                          </div>
                        </form>
                          </div>
                         </form>
                        <form id="delete_user-<%= current_user.id %>" method="get" action="/profile/<%= current_user.id %>/delete"><input class="btn-danger" type="submit" name="submit" value="Delete Account">
                        </form>
                        <div id="are_you_sure">
                        </div>
                      </div>
                    </div><!-- /INNER ROW-FLUID-->
                  </div><!-- SPAN6-->
                </div>
              </div><!-- / CONTAINER-->
            </div>
          </div>
        </div>
      </div><!-- /INNER ROW-FLUID-->
    </div><!-- SPAN6-->
  </div>
</div><!-- / CONTAINER-->
</section>

<script type="text/javascript">
  $('#delete_user-<%= current_user.id %>').on('submit', function(event) {
    console.log("test");
    event.preventDefault();

    var url = $(this).attr('action')

    $.get(url, function(serverResponse) {
      console.log(serverResponse);
      $("#are_you_sure").html(serverResponse);
    })
  });

  $(document).on('click', '#second_thoughts', function(event) {
    event.preventDefault();
    $('#are_you_sure').children().remove();
  });

</script>
