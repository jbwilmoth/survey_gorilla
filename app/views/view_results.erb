
<h3> <%= @survey.name %> Results</h3>
<p>Number of Participants: <%= @total_responses %></p>

<div>
  <% @survey.questions.each do |question| %>
  <p>Question: <%= question.content %></p>
    <div class='choices'>
      <p>Choices: </p>
      <% question.choices.each do |choice| %>
        <p><%= choice.content %>: <%= choice.responses.count %></p>
      <% end %>
    </div>
  <% end %>
</div>
